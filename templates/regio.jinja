{% extends "layout.jinja" %}
{% block title %}Provincie {{ regio.provincie.name }}, regio {{ regio.name }}{% endblock %}
{% block description %}Hoe goed is het motorrijweer in de regio {{ regio.name }} (provincie {{ regio.provincie.name }}){% endblock %}
{% block body %}

{% set weer = weer.overdag %}
{% set provincie = regio.provincie %}
{% set name = regio.name + ', provincie ' + regio.provincie.name %}

	<div class="row">
		<div class="span12">

			{% include 'blocks/message_motorrijweer.jinja' %}

			<div class="component component-big">
				<div class="module">
					<div class="module-header">
						<h3>Weergegevens voor {{ datum|dateformat('EEEE d MMMM yyyy') }} in de regio {{ regio.name }} (provincie {{ regio.provincie.name }})</h3>
						<p>Laats	t geupdate: {{ weer.last_update|datetimeformat('d MMMM yyyy') }} om {{ weer.last_update|datetimeformat('HH:mm') }}</p>
					</div>

					<div class="module-body">
						<div class="row">
							<div class="span6">
								{% include 'blocks/summary.jinja' %}
							</div>
							<div class="span5">
								{% include 'blocks/weerkaart.jinja' %}
							</div>
						</div>
					</div>

					<div class="module-footer">
						{% include 'blocks/pijltjes_provincie.jinja' %}
					</div>
				</div>
			</div>

			{# {% include 'blocks/weerkaart.jinja' %} #}

			<div class="component component-big">
				<div class="module">
					<div class="module-body data-per-dagdeel">
						<div class="row">
							<div class="span12">
								{% include 'blocks/data_per_dagdeel.jinja' %}
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="component component-big">
				<div class="module">
					<div class="module-body grafiek">
						<div class="row">
							<div class="span12">
								<div id="chart"></div>

								{% include 'blocks/data_per_uur.jinja' %}

							</div>
						</div>
					</div>

					<div class="module-footer">
						<!--{{ weer.droog_tot }}-->
						<!--{{ weer.droog_om }}-->
						{% if not weer.droog_tot and not weer.droog_om %}
							<span>Het blijft de hele dag regenen :(</span>
						{% elif not weer.droog_tot %}
							<span>Het is weer droog om: {{ weer.droog_om.strftime('%H:%M') }}</span>
						{% else %}
							<span>Het is droog tot: {{ weer.droog_tot }}
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>

	{#}
	<div class="row">
